<div class="banner">
  <div class="container">
    <h1><%= @list.name %></h1>
  </div>
</div>
<div class="container mt-4">
  <div class="row">
    <div class="d-flex justify-content-between flex-row my-4">
      <div>
        <%= link_to lists_path, class: "btn-accueil" do %>
          <i class="fas fa-home"></i>
        <% end %>
      </div>
      <div>
        <%= link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-primary add_movie"  %>
      </div>
    </div>

    <% @movies.each do |movie| %>
    <div class="col-md-4">
      <div class="card-trip">
          <img src="<%= movie.poster_url %>" />
          <div class="card-trip-infos">
            <div>
              <h2><%= movie.title %></h2>
              <p><%= movie.overview %></p>
            </div>
            <h2 class="card-trip-pricing"><%= movie.rating %></h2>
            <i class="fas fa-star" style="color: #fbdc04;"></i>
          </div>
      </div>
    </div>
    <% end %>
  </div>
</div>

<div class="container mt-4">
    <div class="row">
      <div class="d-flex flex-row-reverse">
        <div class="col-md-4">
          <div class="card-bookmark">
            <h1>Add Your bookmark</h1>
            <%= simple_form_for [@list, @bookmark] do |f| %>
              <%= f.input :comment %>
              <%= f.association :movie, collection: Movie.all, prompt: "Select a movie" %>
              <%= f.submit "Add Bookmark", class: 'btn btn-primary' %>
            <% end %>
          </div>

        </div>
      </div>
  </div>
</div>
